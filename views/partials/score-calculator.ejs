<script>
(function() {
    // Initialize calculator when DOM is ready
    document.addEventListener('DOMContentLoaded', function() {
        initializeScoreCalculator();
    });
    
    function initializeScoreCalculator() {
        const penaltyChecks = document.querySelectorAll('.penalty-check');
        const imagesInput = document.getElementById('calc-images-without-alt');
        const finalScoreElement = document.getElementById('calc-final-score');
        const scoreCircle = document.getElementById('calc-score-circle');
        const scoreLabel = document.getElementById('calc-score-label');
        const totalPenaltiesElement = document.getElementById('calc-total-penalties');
        const imagesPenaltyElement = document.getElementById('calc-images-penalty');
        const resetButton = document.getElementById('calc-reset');
        
        // Check if elements exist (for pages that don't include this component)
        if (!finalScoreElement) return;
        
        function calculateScore() {
            let totalPenalties = 0;
            
            // Calculate checkbox penalties
            penaltyChecks.forEach(function(checkbox) {
                if (checkbox.checked) {
                    totalPenalties += parseInt(checkbox.dataset.penalty);
                }
            });
            
            // Calculate image penalties
            const imagesWithoutAlt = parseInt(imagesInput.value) || 0;
            const imagePenalty = Math.min(imagesWithoutAlt * 2, 20);
            totalPenalties += imagePenalty;
            
            // Update image penalty display
            imagesPenaltyElement.textContent = '-' + imagePenalty + ' pts';
            
            // Calculate final score
            const finalScore = Math.max(0, 100 - totalPenalties);
            
            // Update displays
            finalScoreElement.textContent = finalScore;
            totalPenaltiesElement.textContent = totalPenalties + ' points';
            
            // Update score circle color and label
            let colorClass, label;
            if (finalScore >= 80) {
                colorClass = '#28a745'; // Green
                label = 'Excellent';
            } else if (finalScore >= 60) {
                colorClass = '#ffc107'; // Yellow
                label = 'Good';
            } else if (finalScore >= 40) {
                colorClass = '#fd7e14'; // Orange
                label = 'Fair';
            } else {
                colorClass = '#dc3545'; // Red
                label = 'Poor';
            }
            
            scoreCircle.style.backgroundColor = colorClass;
            scoreLabel.textContent = label;
            scoreLabel.className = 'fw-bold';
        }
        
        function resetCalculator() {
            penaltyChecks.forEach(function(checkbox) {
                checkbox.checked = false;
            });
            imagesInput.value = 0;
            calculateScore();
        }
        
        // Add event listeners
        penaltyChecks.forEach(function(checkbox) {
            checkbox.addEventListener('change', calculateScore);
        });
        
        if (imagesInput) {
            imagesInput.addEventListener('input', calculateScore);
        }
        
        if (resetButton) {
            resetButton.addEventListener('click', resetCalculator);
        }
        
        // Initialize with current values
        calculateScore();
    }
})();
</script>

