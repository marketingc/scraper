    <!-- Bulk Delete Confirmation Modal -->
    <div class="modal fade" id="bulkDeleteModal" tabindex="-1" aria-labelledby="bulkDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="bulkDeleteModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Delete All Data - WARNING
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger" role="alert">
                        <h5><i class="fas fa-skull-crossbones me-2"></i>DANGER - IRREVERSIBLE ACTION</h5>
                        <p class="mb-0">This will permanently delete <strong>ALL</strong> data from the system including:</p>
                    </div>
                    
                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item d-flex justify-content-between">
                            <span><i class="fas fa-file-alt text-primary me-2"></i>All SEO Reports</span>
                            <span class="badge bg-secondary" id="reportsCount">-</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span><i class="fas fa-code-branch text-info me-2"></i>All URL Versions</span>
                            <span class="badge bg-secondary" id="versionsCount">-</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span><i class="fas fa-link text-success me-2"></i>All URL Masters</span>
                            <span class="badge bg-secondary" id="mastersCount">-</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span><i class="fas fa-tasks text-warning me-2"></i>All Job Batches</span>
                            <span class="badge bg-secondary" id="batchesCount">-</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span><i class="fas fa-list text-dark me-2"></i>All Queue Jobs</span>
                            <span class="badge bg-secondary" id="queueCount">-</span>
                        </li>
                    </ul>
                    
                    <div class="alert alert-warning">
                        <h6><i class="fas fa-shield-alt me-2"></i>Safety Confirmation Required</h6>
                        <p class="mb-3">To proceed, you must type the exact phrase below:</p>
                        <div class="mb-3">
                            <label for="confirmationText" class="form-label">Type: <code>DELETE ALL DATA</code></label>
                            <input type="text" class="form-control" id="confirmationText" placeholder="Type the exact phrase..." autocomplete="off">
                        </div>
                        <small class="text-muted">This confirmation ensures you understand the consequences of this action.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancel
                    </button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn" disabled onclick="performBulkDelete()">
                        <i class="fas fa-trash-alt me-2"></i>Delete All Data
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Bulk delete functionality
        let bulkDeleteModal;
        
        function showBulkDeleteModal() {
            bulkDeleteModal = new bootstrap.Modal(document.getElementById('bulkDeleteModal'));
            
            // Load current data counts
            loadDataCounts();
            
            // Reset confirmation input
            document.getElementById('confirmationText').value = '';
            document.getElementById('confirmDeleteBtn').disabled = true;
            
            bulkDeleteModal.show();
        }
        
        async function loadDataCounts() {
            try {
                const response = await fetch('/api/data-counts');
                const counts = await response.json();
                
                document.getElementById('reportsCount').textContent = counts.reports || 0;
                document.getElementById('versionsCount').textContent = counts.versions || 0;
                document.getElementById('mastersCount').textContent = counts.masters || 0;
                document.getElementById('batchesCount').textContent = counts.batches || 0;
                document.getElementById('queueCount').textContent = counts.queue || 0;
            } catch (error) {
                console.error('Failed to load data counts:', error);
                // Set fallback values
                document.getElementById('reportsCount').textContent = '?';
                document.getElementById('versionsCount').textContent = '?';
                document.getElementById('mastersCount').textContent = '?';
                document.getElementById('batchesCount').textContent = '?';
                document.getElementById('queueCount').textContent = '?';
            }
        }
        
        async function performBulkDelete() {
            const confirmBtn = document.getElementById('confirmDeleteBtn');
            const originalText = confirmBtn.innerHTML;
            
            try {
                // Show loading state
                confirmBtn.disabled = true;
                confirmBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Deleting...';
                
                const confirmText = document.getElementById('confirmationText').value;
                
                const response = await fetch('/api/bulk-delete-all', {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ confirmText })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // Close modal
                    bulkDeleteModal.hide();
                    
                    // Show success message
                    showToast(`Successfully deleted: ${result.deletedCounts.reports} reports, ${result.deletedCounts.urlVersions} versions, ${result.deletedCounts.urlMasters} URLs, ${result.deletedCounts.jobBatches} batches, ${result.deletedCounts.jobQueue} jobs`, 'success');
                    
                    // Reload page after short delay
                    setTimeout(() => {
                        window.location.reload();
                    }, 2000);
                } else {
                    throw new Error(result.error || 'Delete failed');
                }
                
            } catch (error) {
                console.error('Bulk delete error:', error);
                showToast('Failed to delete data: ' + error.message, 'error');
                
                // Restore button
                confirmBtn.disabled = false;
                confirmBtn.innerHTML = originalText;
            }
        }
        
        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = `alert alert-${type === 'success' ? 'success' : type === 'error' ? 'danger' : 'info'} position-fixed`;
            toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 350px; max-width: 500px;';
            toast.innerHTML = `
                <div class="d-flex align-items-start">
                    <span class="flex-grow-1">${message}</span>
                    <button type="button" class="btn-close ms-2" onclick="this.parentElement.parentElement.remove()"></button>
                </div>
            `;
            document.body.appendChild(toast);
            
            // Auto-remove after 5 seconds
            setTimeout(() => {
                if (toast.parentElement) {
                    toast.remove();
                }
            }, 5000);
        }
        
        // Enable/disable delete button based on confirmation text
        document.addEventListener('DOMContentLoaded', function() {
            const confirmationInput = document.getElementById('confirmationText');
            const confirmBtn = document.getElementById('confirmDeleteBtn');
            
            if (confirmationInput && confirmBtn) {
                confirmationInput.addEventListener('input', function() {
                    confirmBtn.disabled = this.value !== 'DELETE ALL DATA';
                });
            }
        });

        // Filter functionality
        function applyFilters() {
            const urlFilter = document.getElementById('urlFilter').value.toLowerCase();
            const crawlStatusFilter = document.getElementById('crawlStatusFilter').value;
            const scoreFilter = document.getElementById('scoreFilter').value;
            const statusFilter = document.getElementById('statusFilter').value;
            const dateFilter = document.getElementById('dateFilter').value;
            const limitFilter = document.getElementById('limitFilter').value;
            
            const rows = document.querySelectorAll('#reportsTable tbody tr');
            let visibleCount = 0;
            
            rows.forEach((row, index) => {
                let show = true;
                
                // URL filter
                if (urlFilter && !row.dataset.url.includes(urlFilter) && !row.dataset.title.includes(urlFilter)) {
                    show = false;
                }
                
                // Crawl status filter
                if (crawlStatusFilter) {
                    const crawlStatus = row.dataset.crawlStatus;
                    if (crawlStatus !== crawlStatusFilter) {
                        show = false;
                    }
                }
                
                // Score filter
                if (scoreFilter) {
                    const score = parseInt(row.dataset.score);
                    switch(scoreFilter) {
                        case 'excellent': show = show && score >= 80; break;
                        case 'good': show = show && score >= 60 && score < 80; break;
                        case 'fair': show = show && score >= 40 && score < 60; break;
                        case 'poor': show = show && score < 40; break;
                    }
                }
                
                // HTTP Status filter
                if (statusFilter) {
                    const status = row.dataset.status;
                    if (status !== statusFilter) {
                        show = false;
                    }
                }
                
                // Date filter
                if (dateFilter) {
                    const date = new Date(row.dataset.date);
                    const now = new Date();
                    switch(dateFilter) {
                        case 'today':
                            show = show && date.toDateString() === now.toDateString();
                            break;
                        case 'week':
                            const weekAgo = new Date(now.getTime() - 7 * 24 * 60 * 60 * 1000);
                            show = show && date >= weekAgo;
                            break;
                        case 'month':
                            const monthAgo = new Date(now.getTime() - 30 * 24 * 60 * 60 * 1000);
                            show = show && date >= monthAgo;
                            break;
                    }
                }
                
                // Limit filter
                if (limitFilter !== 'all' && visibleCount >= parseInt(limitFilter)) {
                    show = false;
                }
                
                if (show) visibleCount++;
                row.style.display = show ? '' : 'none';
            });
            
            document.getElementById('resultsCount').textContent = `${visibleCount} reports`;
        }
        
        function clearFilters() {
            document.getElementById('urlFilter').value = '';
            document.getElementById('crawlStatusFilter').value = '';
            document.getElementById('scoreFilter').value = '';
            document.getElementById('statusFilter').value = '';
            document.getElementById('dateFilter').value = '';
            document.getElementById('limitFilter').value = '25';
            applyFilters();
        }
        
        // Export to CSV
        function exportToCSV() {
            const table = document.getElementById('reportsTable');
            const rows = Array.from(table.querySelectorAll('tbody tr')).filter(row => row.style.display !== 'none');
            
            const headers = ['URL', 'Status Code', 'Response Time', 'SEO Score', 'Title Length', 'Meta Length', 'H1 Count', 'Images', 'Missing Alt', 'Links', 'Schema Count', 'PWA Score', 'Issues', 'Date'];
            
            const csvContent = [
                headers.join(','),
                ...rows.map(row => {
                    const cells = row.querySelectorAll('td');
                    return [
                        `"${cells[0].querySelector('a').href}"`,
                        cells[1].querySelector('.badge').textContent.trim(),
                        cells[1].querySelector('.response-time')?.textContent.replace('ms', '') || '0',
                        cells[2].querySelector('.score-circle').textContent.trim(),
                        cells[3].textContent.match(/Title: (\d+)/)?.[1] || '0',
                        cells[3].textContent.match(/Meta: (\d+)/)?.[1] || '0',
                        cells[3].textContent.match(/H1 Tags: (\d+)/)?.[1] || '0',
                        cells[5].textContent.match(/Total: (\d+)/)?.[1] || '0',
                        cells[5].textContent.match(/Missing Alt: (\d+)/)?.[1] || '0',
                        cells[6].textContent.match(/Total: (\d+)/)?.[1] || '0',
                        cells[7].textContent.match(/Found: (\d+)/)?.[1] || '0',
                        cells[8].textContent.match(/Score: (\d+)/)?.[1] || '0',
                        cells[9].querySelector('.issue-count')?.textContent || '0',
                        `"${cells[10].textContent.trim()}"`
                    ].join(',');
                })
            ].join('\n');
            
            const blob = new Blob([csvContent], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `seo-reports-${new Date().toISOString().split('T')[0]}.csv`;
            a.click();
            window.URL.revokeObjectURL(url);
        }
        
        // Delete report
        async function deleteReport(id) {
            if (!confirm('Are you sure you want to delete this report?')) return;
            
            try {
                const response = await fetch(`/api/report/${id}`, {
                    method: 'DELETE'
                });
                
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Failed to delete report');
                }
            } catch (error) {
                alert('Error deleting report');
            }
        }
        
        // Event listeners
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('urlFilter').addEventListener('input', applyFilters);
            document.getElementById('crawlStatusFilter').addEventListener('change', applyFilters);
            document.getElementById('scoreFilter').addEventListener('change', applyFilters);
            document.getElementById('statusFilter').addEventListener('change', applyFilters);
            document.getElementById('dateFilter').addEventListener('change', applyFilters);
            document.getElementById('limitFilter').addEventListener('change', applyFilters);
            
            // Initialize tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
            
            // Initial filter application
            applyFilters();
        });
    </script>
